---
interface Props {
  href?: string;
  type?: "button" | "submit";
  variant?: "primary" | "secondary";
  class?: string;
}

const { href, type = "button", variant = "primary", class: className } = Astro.props;

const baseStyles = "px-6 py-3 rounded-lg font-medium transition-all duration-300 transform hover:scale-105";
const variants = {
  primary: "bg-cyan-600 text-white hover:bg-cyan-700 shadow-lg hover:shadow-cyan-500/25",
  secondary: "bg-gray-800 text-white hover:bg-gray-900 shadow-lg hover:shadow-gray-500/25"
};
---

{
  href ? (
    <a href={href} class:list={[baseStyles, variants[variant], className]}>
      <slot />
    </a>
  ) : (
    <button type={type} class:list={[baseStyles, variants[variant], className]}>
      <slot />
    </button>
  )
}