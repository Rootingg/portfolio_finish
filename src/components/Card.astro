---
interface Props {
  title: string;
  description: string;
  icon?: string;
}

const { title, description, icon } = Astro.props;
---

<div class="bg-white/10 backdrop-blur-lg p-6 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-gray-800/20">
  {icon && <div class="text-4xl mb-4">{icon}</div>}
  <h3 class="text-xl font-bold mb-3 text-cyan-500">{title}</h3>
  <p class="text-gray-300">{description}</p>
</div>