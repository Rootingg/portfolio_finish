---
import Layout from '../../layouts/Layout.astro';

// Redirection si déjà connecté
const token = Astro.cookies.get('token')?.value;
if (token) {
  return Astro.redirect('/admin');
}
---

<Layout title="Connexion - Administration">
  <main class="pt-32">
    <div class="container mx-auto px-6 py-12">
      <div class="max-w-md mx-auto">
        <h1 class="text-4xl font-bold mb-8 text-center">
          <span class="bg-gradient-to-r from-cyan-500 to-blue-500 text-transparent bg-clip-text">
            Connexion
          </span>
        </h1>

        <form method="POST" action="/api/auth/login" class="space-y-6">
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">
              Nom d'utilisateur
            </label>
            <input
              type="text"
              name="username"
              required
              class="w-full px-4 py-2 bg-gray-800/50 border border-gray-700 rounded-lg focus:ring-2 focus:ring-cyan-500"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">
              Mot de passe
            </label>
            <input
              type="password"
              name="password"
              required
              class="w-full px-4 py-2 bg-gray-800/50 border border-gray-700 rounded-lg focus:ring-2 focus:ring-cyan-500"
            />
          </div>

          <button
            type="submit"
            class="w-full bg-cyan-600 text-white py-2 px-4 rounded-lg hover:bg-cyan-700 transition-colors"
          >
            Se connecter
          </button>
        </form>
      </div>
    </div>
  </main>
</Layout>