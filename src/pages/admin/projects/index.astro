---
import Layout from '../../../layouts/Layout_admin.astro';
import { verifyToken } from '../../../lib/auth';
import { db } from '../../../lib/db';

// Vérification de l'authentification
const token = Astro.cookies.get('token')?.value;
if (!token || !verifyToken(token)) {
  return Astro.redirect('/admin/login');
}

// Récupération des projets
const result = await db.execute('SELECT * FROM projects ORDER BY created_at DESC');
const projects = result.rows;
---

<Layout title="Gestion des Projets - Administration">
  <main class="pt-32">
    <div class="container mx-auto px-6 py-12">
      <div class="flex justify-between items-center mb-8">
        <h1 class="text-4xl font-bold">
          <span class="bg-gradient-to-r from-cyan-500 to-blue-500 text-transparent bg-clip-text">
            Projets
          </span>
        </h1>
        <a 
          href="/admin/projects/new" 
          class="bg-cyan-600 text-white px-4 py-2 rounded-lg hover:bg-cyan-700 transition-colors"
        >
          Nouveau Projet
        </a>
      </div>

      <div class="bg-white/5 backdrop-blur-lg rounded-xl border border-gray-800/20 overflow-hidden">
        <table class="w-full">
          <thead>
            <tr class="border-b border-gray-800/20">
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase">Titre</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase">Technologies</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-400 uppercase">Actions</th>
            </tr>
          </thead>
          <tbody>
            {projects.map((project: any) => (
              <tr class="border-b border-gray-800/10 hover:bg-gray-800/5">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <span class="text-2xl mr-3">{project.icon}</span>
                    <span class="font-medium">{project.title}</span>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="flex flex-wrap gap-2">
                    {JSON.parse(project.tech).map((tech: string) => (
                      <span class="px-2 py-1 bg-gray-800/50 rounded-full text-xs text-cyan-400">
                        {tech}
                      </span>
                    ))}
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <a href={`/admin/projects/${project.id}/edit`} class="text-cyan-500 hover:text-cyan-400 mr-4">
                    Modifier
                  </a>
                  <button
                    data-project-id={project.id}
                    class="text-red-500 hover:text-red-400 delete-project"
                  >
                    Supprimer
                  </button>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </main>
</Layout>

<script>
  document.querySelectorAll('.delete-project').forEach(button => {
    button.addEventListener('click', async () => {
      if (!confirm('Voulez-vous vraiment supprimer ce projet ?')) return;
      
      const projectId = button.getAttribute('data-project-id');
      const response = await fetch(`/api/projects/${projectId}`, {
        method: 'DELETE'
      });

      if (response.ok) {
        window.location.reload();
      }
    });
  });
</script>