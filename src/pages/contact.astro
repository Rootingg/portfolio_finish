---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';

const socialLinks = [
  {
    name: "GitHub",
    url: "https://github.com/Rootingg",
    icon: "github"
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/lucas-torres3/",
    icon: "linkedin"
  }
];
---

<Layout title="Contact - Cybersécurité">
  <main class="min-h-screen bg-gradient-to-b from-gray-900 to-gray-800">
    <div class="container mx-auto px-4 py-24 max-w-6xl">
      <h1 class="text-4xl font-bold text-center mb-16">
        <span class="bg-gradient-to-r from-cyan-500 to-blue-500 text-transparent bg-clip-text">
          Contact
        </span>
      </h1>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Contact Form -->
        <div class="bg-gray-800/50 backdrop-blur p-8 rounded-xl shadow-lg border border-gray-700">
          <h2 class="text-2xl font-bold mb-6 text-cyan-400">Envoyez-moi un message</h2>
          <form id="contact-form" class="space-y-6">
            <div>
              <label class="block text-gray-300 mb-2">Nom</label>
              <input
                type="text"
                name="name"
                required
                class="w-full px-4 py-3 rounded-lg bg-gray-700/50 border border-gray-600 text-white focus:outline-none focus:border-cyan-500 transition-colors"
              />
            </div>
            <div>
              <label class="block text-gray-300 mb-2">Email</label>
              <input
                type="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-lg bg-gray-700/50 border border-gray-600 text-white focus:outline-none focus:border-cyan-500 transition-colors"
              />
            </div>
            <div>
              <label class="block text-gray-300 mb-2">Message</label>
              <textarea
                name="message"
                required
                class="w-full px-4 py-3 rounded-lg bg-gray-700/50 border border-gray-600 text-white focus:outline-none focus:border-cyan-500 transition-colors h-32"
              ></textarea>
            </div>
            <Button type="submit" variant="primary" class="w-full">Envoyer</Button>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="space-y-8">
          <div class="bg-gray-800/50 backdrop-blur p-8 rounded-xl shadow-lg border border-gray-700">
            <h2 class="text-2xl font-bold mb-6 text-cyan-400">Réseaux Sociaux</h2>
            <div class="space-y-4">
              {socialLinks.map((link) => (
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center space-x-3 text-gray-300 hover:text-cyan-500 transition-colors"
                >
                  <span class="w-6 h-6">
                    {link.icon === "github" && (
                      <svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
                        <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/>
                      </svg>
                    )}
                    {link.icon === "linkedin" && (
                      <svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                      </svg>
                    )}
                  </span>
                  <span>{link.name}</span>
                </a>
              ))}
            </div>
          </div>

          <div class="bg-gray-800/50 backdrop-blur p-8 rounded-xl shadow-lg border border-gray-700">
            <h2 class="text-2xl font-bold mb-6 text-cyan-400">Email</h2>
            <a
              href="mailto:lucas.torres@oteria.fr"
              class="text-gray-300 hover:text-cyan-500 transition-colors"
            >
              lucas.torres@oteria.fr
            </a>
          </div>
        </div>
      </div>
    </div>
    <div id="notification" class="fixed top-24 right-4 max-w-sm w-full mx-4 md:mx-0 p-4 rounded-lg border transform translate-x-[150%] transition-transform duration-300 z-50">
      <div class="flex items-center gap-3">
        <span id="notification-icon" class="text-2xl flex-shrink-0"></span>
        <p id="notification-message" class="text-sm"></p>
      </div>
    </div>

  </main>
</Layout>

<script>
  const form = document.getElementById('contact-form');
  const notification = document.getElementById('notification');
  const notificationMessage = document.getElementById('notification-message');
  const notificationIcon = document.getElementById('notification-icon');

  const showNotification = (message: string, type: 'success' | 'error') => {
    if (notification && notificationMessage && notificationIcon) {
      if (type === 'success') {
        notification.className = 'fixed top-24 right-4 max-w-sm p-4 rounded-lg border bg-green-500/10 border-green-500/20 text-green-400 transform translate-x-full transition-transform duration-300 z-50';
        notificationIcon.textContent = '✓';
      } else {
        notification.className = 'fixed top-24 right-4 max-w-sm p-4 rounded-lg border bg-red-500/10 border-red-500/20 text-red-400 transform translate-x-full transition-transform duration-300 z-50';
        notificationIcon.textContent = '✕';
      }
      notificationMessage.textContent = message;

      setTimeout(() => {
        notification.classList.remove('translate-x-full');
      }, 100);

      setTimeout(() => {
        notification.classList.add('translate-x-full');
      }, 3000);
    }
  };

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form as HTMLFormElement);

    try {
      const response = await fetch('/api/contact', {
        method: 'POST',
        body: formData
      });

      if (response.ok) {
        showNotification('Message envoyé avec succès !', 'success');
        (form as HTMLFormElement).reset();
      } else {
        throw new Error('Erreur lors de l\'envoi du message');
      }
    } catch (error) {
      showNotification('Une erreur est survenue. Veuillez réessayer.', 'error');
    }
  });
</script>